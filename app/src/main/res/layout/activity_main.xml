<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    >
    <Button
        android:id="@+id/textToVoice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Text To Voice"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnAlertDilogActivity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Alert Dialog"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/checkInternet"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Check internet"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/playAudio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Paly audio"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"/>



    <Button
        android:id="@+id/webToAndroid"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Clickfrom web"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"/>





</LinearLayout>